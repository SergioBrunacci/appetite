<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/tools"
    android:padding="16dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="Price" />

    <com.nex3z.togglebuttongroup.MultiSelectToggleGroup
        android:id="@+id/multiple_toggle_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tbgChildSpacing="10dp">

        <com.nex3z.togglebuttongroup.button.LabelToggle
            android:id="@+id/PriceLevel_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pricefilterItemsTopPad"
            android:paddingRight="@dimen/pricefilterItemsRightPad"
            android:paddingBottom="10px"
            android:text="$"/>

        <com.nex3z.togglebuttongroup.button.LabelToggle
            android:id="@+id/PriceLevel_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pricefilterItemsTopPad"
            android:paddingBottom="10px"
            android:paddingRight="@dimen/pricefilterItemsRightPad"
            android:text="$$"/>

        <com.nex3z.togglebuttongroup.button.LabelToggle
            android:id="@+id/PriceLevel_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pricefilterItemsTopPad"
            android:paddingBottom="10px"
            android:paddingRight="@dimen/pricefilterItemsRightPad"
            android:text="$$$"/>

        <com.nex3z.togglebuttongroup.button.LabelToggle
            android:id="@+id/PriceLevel_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/pricefilterItemsTopPad"
            android:paddingBottom="10px"
            android:text="$$$$"/>

    </com.nex3z.togglebuttongroup.MultiSelectToggleGroup>

</LinearLayout>